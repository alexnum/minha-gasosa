<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PlanningActivity"
    tools:showIn="@layout/activity_planning">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Planejamento"
        android:id="@+id/textViewPlanejamento"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quanto você pretende gastar esse mês com combustível?"
        android:id="@+id/textViewMessageFuel"
        android:layout_below="@+id/textViewPlanejamento"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="79dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ed_valor_maximo"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textViewMessageFuel"
        android:layout_alignRight="@+id/textViewPlanejamento"
        android:layout_alignEnd="@+id/textViewPlanejamento"
        android:layout_alignLeft="@+id/textViewPlanejamento"
        android:layout_alignStart="@+id/textViewPlanejamento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R$"
        android:gravity="center_vertical"
        android:id="@+id/textViewR$"
        android:layout_alignBottom="@+id/ed_valor_maximo"
        android:layout_toLeftOf="@+id/ed_valor_maximo"
        android:layout_toStartOf="@+id/ed_valor_maximo"
        android:layout_alignTop="@+id/ed_valor_maximo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/buttonOK"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/ed_valor_maximo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
